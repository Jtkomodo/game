package gameEngine;

import java.util.HashMap;

import org.joml.Vector2f;

public class RenderTIles {

	private static HashMap<Integer,Tiles> tiles=new HashMap<Integer,Tiles>();
	private static int last;
	private static ShaderProgram lastShaderBinded;
	private static Texture Lasttex;
	public static void Draw(Tiles Currenttile,Vector2f translation,float angle,float scale) {
		if(!tiles.containsValue(Currenttile)) {
			tiles.put(last+1, Currenttile);
			last++;
			}
	
		
		
		if(!Currenttile.getShader().equals(lastShaderBinded) || !Currenttile.getTex().equals(Lasttex)) {
			Currenttile.Bind(0);
		
			lastShaderBinded=Currenttile.getShader();
			Lasttex=Currenttile.getTex();
		}
		
	    
		Currenttile.draw();
		
		
		
	}
	
	
	
	
}
